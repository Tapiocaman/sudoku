package com.me.battle_school;

import com.badlogic.gdx.math.Rectangle;
import com.badlogic.gdx.math.Vector2;
import com.me.battle_school.Player.State;

public class Player {

	public enum State{
		IDLE, WALKING_H, WALKING_Y, INTERACT
	}
	
	static final float SPEED = 2f; //unit per second
	static final float HEIGHT = 0.5f; //1.5 unit tall
	static final float WIDTH = 0.5f; //1 unit fat
	
	Vector2 position = new Vector2(); 
	Vector2 velocity = new Vector2(); 
	Rectangle bounds = new Rectangle(); 
	State state = State.IDLE; 
	boolean facingLeft = true; 
	boolean facingUp = true; 
	
	public Player(Vector2 position) {
		this.position = position; 
		this.bounds.height = HEIGHT; 
		this.bounds.width = WIDTH; 
	}
	
	public Rectangle getBounds(){
		return bounds; 
	}
	
	public Vector2 getPosition(){
		return position; 
	}

	public void update(float delta) {
		// TODO Auto-generated method stub
		
	}

	public void setFacingLeft(boolean bool) {
		facingLeft = bool; 
	}

	public void setState(State playerState) {
		// TODO Auto-generated method stub
		state = playerState; 
	}
	
}
